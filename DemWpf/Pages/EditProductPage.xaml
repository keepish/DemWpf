<Page x:Class="DemWpf.Pages.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer>
        <StackPanel Width="400" Margin="10">
            <Image x:Name="ProductImage" Height="150" Stretch="Uniform"/>
            <Button Content="Выбрать изображение" Click="SelectImage_Click"/>
            <TextBox x:Name="ArticleBox"/>
            <TextBox x:Name="NameBox"/>
            <TextBox x:Name="DescriptionBox"/>
            <ComboBox x:Name="CategoryBox" DisplayMemberPath="Name"/>
            <ComboBox x:Name="ManufacturerBox" DisplayMemberPath="Name"/>
            <ComboBox x:Name="SupplierBox" DisplayMemberPath="Name"/>
            <TextBox x:Name="PriceBox"/>
            <TextBox x:Name="DiscountBox"/>
            <TextBox x:Name="AmountBox"/>
            <TextBox x:Name="UnitBox"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Назад" Click="Back_Click"/>
                <Button Content="Сохранить" Click="Save_Click"/>
                <Button Content="Удалить" Click="Delete_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
